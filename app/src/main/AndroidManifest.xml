<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.readnovel">
    <!-- App permission-->>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <application>
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light"
        android:firebase_crashlytics_collection_enabled="false"
        android:theme="@style/Theme.ReadNovel">
        <activity android:name=".Activity.Dashboard"
            android:theme="@style/Theme.ReadNovel">

        </activity>

        <activity android:name=".Activity.MainActivity"
            android:theme="@style/Theme.ReadNovel">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activity.TopActivity"
            android:theme="@style/Theme.ReadNovel">
        </activity>
        <activity android:name=".Activity.FavoriteActivity"
            android:theme="@style/Theme.ReadNovel">
        </activity>
        <activity android:name=".Activity.DetailComicActivity" />
        <activity android:name=".Activity.PageComicActivity" />
        <activity android:name=".Activity.CategoryActivity" />
    </application>

</manifest>