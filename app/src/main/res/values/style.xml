<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="viewParent.headerText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimens_14dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/dimens_16dp</item>
        <item name="android:backgroundTint">#00FFFFFF</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/rounded_border_button</item>
        <item name="android:textColor">@color/yellow_500</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="bookmarkButton" parent="viewParent">
        <item name="android:background">@drawable/rounded_border_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ChromeStylePopup" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:maxWidth">@dimen/dimens_200dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
</resources>